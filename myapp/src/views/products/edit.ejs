<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head')%>
<body>
    
    <%- include('../partials/header')%>
   
    <main id="product-upload__main">
        <section id="product-upload__section">

            <form action="/products/edit/<%= product.id %>?_method=PUT" method="POST" id="product-upload__form" enctype="multipart/form-data">

                <div class="h1-center">
                    <h1>EDIT PRODUCT: <%= product.name %></h1>
                </div>
                
                <div class="image-upload-container">
                    <div class="title-container">
                        <h3>PRODUCT IMAGES</h3>
                    </div>
                    
                    <ul id="loaded-images-ul">
                        <li>
                            <label for="file">
                                <span class="material-icons camera-icon">
                                    add_a_photo
                                </span>
                                <p>+ ADD</p>
                                <p>(max 6 images)</p>
                            </label>
                            <input name="images" id="file" type="file" multiple>
                        </li>
                        <li>
                            <!-- <small class="errors-style"><%#= typeof errors == 'undefined' ? '' : typeof errors.images == 'undefined' ? '' : errors.images.msg %></small> -->
                        </li>
                    </ul>

                </div>
                <div class="product-data-container">
                    <div class="title-container">
                        <h3>PRODUCT NAME</h3>
                    </div>
                    <div class="product-data">
                        <label for="name"></label>
                        <% if(typeof product != 'undefined') {%>
                            <input type="text" class="input-style" value="<%= product.name ? product.name : '' %> " name="name"> 
                            <small class="errors-style"><%= typeof errors == 'undefined' ? '' : typeof errors.name == 'undefined' ? '' : errors.name.msg %></small>
                        <% } else { %>
                            <input type="text" class="input-style" value="" name="name"> 
                        <% } %>
                    </div>
                    <div class="title-container">
                        <h3>PRODUCT DESCRIPTION</h3>
                    </div>
                    <div class="product-data">
                        <label for="description"></label>
                        <textarea class="input-style textarea-style" name="description" id="description" cols="30" rows="10"><%= product.description%></textarea>
                    </div>
                    <div class="product-price-discount">
                        <div>
                            <label for="price">PRICE $ </label>
                            <% if(typeof product != 'undefined') {%>
                                <input class= "input-style width-input-price-discount" type="text" value="<%= product.price ? product.price : '' %>" name="price" id="productPrice">          
                                <small class="errors-style "><%= typeof errors == 'undefined' ? '' : typeof errors.price == 'undefined' ? '' : errors.price.msg %></small>
                            <% } else { %>
                                <input class= "input-style width-input-price-discount" type="text" value="" name="price" id="productPrice">
                            <% } %>
                        </div>
                        <div>
                            <% if(typeof product != 'undefined') {%>
                                <label for="discount">DISCOUNT %</label>
                                <input class= "input-style width-input-price-discount" type="text" value="<%= product.discount ? product.discount : '' %>" name="discount" id="productPromo">
                                <small class="errors-style"><%= typeof errors == 'undefined' ? '' : typeof errors.discount == 'undefined' ? '' : errors.discount.msg %></small>
                            <% } else {%>
                                <input class= "input-style width-input-price-discount" type="text" value="" name="discount" id="productPromo">
                            <% } %>
                        </div>
                        <div>
                            <% if(typeof product != 'undefined') {%>
                                <label for="price">WHOLESALE PRICE $ </label>
                                    <input class= "input-style width-input-price-discount" type="text" value="<%= product.wholesale_price ? product.wholesale_price : '' %>" name="wholesaleprice" id="productPrice">
                            <% } else {%>
                                <input class= "input-style width-input-price-discount" type="text" value="" name="wholesaleprice" id="productPromo">
                            <% } %>
                        </div>
                        <div>
                            <% if(typeof product != 'undefined') {%>
                                <label for="discount">ART:</label>
                                    <input class= "input-style width-input-price-discount" type="text" value="<%= product.art ? product.art : '' %>" name="art" id="productPromo">
                            <% } else {%>
                                <input class= "input-style width-input-price-discount" type="text" value="" name="art" id="productPromo">
                            <% } %>
                        </div>
                     </div>

                <div class="manage-inventory-container">
                    <div class="title-container">
                        <h3>MANAGE INVENTORY</h3>
                    </div>

                    <div class="manage-form-container">
                        
                        <ul class="ul-upload-data">
                            <li>
                                <p>SIZE</p>

                                <select name="size" class="input-style" id="size" >
                                    <option value="<%= product.sizes[0].id %>" selected><%= product.sizes[0].title %></option>
                                    <option value="1">S</option>
                                    <option value="2">M</option>
                                    <option value="3">L</option>
                                </select>
                            </li>
                            <li>
                                <p>PRODUCT TYPE</p>
                                <select name="type" class="input-style" id="type">
                                    <option value="" disabled selected></option>
                                    <option value="top">TOP</option>
                                    <option value="bottom">BOTTOM</option>
                                    <option value="outerwear">OUTERWEAR</option>
                                    <option value="denim">DENIM</option>
                                </select>
                                <small class="errors-style"><%= typeof errors == 'undefined' ? '' : typeof errors.type == 'undefined' ? '' : errors.type.msg %></small>
                            </li>
                            <li>
                                <p>COLORS & QTY</p>
                                <ul>
                                    <li>
                                        <input type="radio" name="addColor">
                                        <input type="number" class="input-style" name="">
                                    </li>
                                </ul>
                            </li>
                            <li class="save-cancel">
                                <a href="#" class="save-product">Save</a>
                                <span class="material-icons cancel-product">
                                    clear
                                </span>
                            </li>
                        </ul>
                    </div>
                </div>
                
                <div class="submit-button-container">
                    <button type="submit">SAVE PRODUCT</button>
                </div>
            </form>
        </section>





    </main>
    
    <%- include('../partials/footer')%>
    
    
</body>
</html>