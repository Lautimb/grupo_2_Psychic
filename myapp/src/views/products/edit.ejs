<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head')%>
<body>
    
    <%- include('../partials/header')%>
   
    <main id="product-upload__main">
        <section id="product-upload__section">

            <form action="/products/edit/<%= productToEdit.id %>?_method=PUT" method="POST" id="product-upload__form" enctype="multipart/form-data">

                <div class="h1-center">
                    <h1>EDIT PRODUCT</h1>
                </div>
                
                <div class="image-upload-container">
                    <div class="title-container">
                        <h3>PRODUCT IMAGES</h3>
                    </div>
                    
                    <ul id="loaded-images-ul">
                        <li>
                            <span class="material-icons camera-icon">
                                add_a_photo
                            </span>
                            <label for="file">+ ADD IMAGES (max 6)</label>
                            <input name="productImages" id="file" type="file" multiple>
                        </li>
                    </ul>

                </div>
                <div class="product-data-container">
                    <div class="title-container">
                        <h3>PRODUCT NAME</h3>
                    </div>
                    <div class="product-data">
                        <label for="name"></label>
                        <input type="text" class="input-style" name="name" value="<%= productToEdit.name%>">
                    </div>
                    <div class="title-container">
                        <h3>PRODUCT DESCRIPTION</h3>
                    </div>
                    <div class="product-data">
                        <label for="description"></label>
                        <textarea class="input-style textarea-style" name="description" id="description" cols="30" rows="10"><%= productToEdit.description%></textarea>
                    </div>
                    <div class="product-price-discount">
                        <div>
                            <label for="price">PRICE $ </label>
                            <input class= "input-style width-input-price-discount" type="text" name="price" id="productPrice" value="<%= productToEdit.price%>"></input>
                        </div>
                        <div>
                            <label for="discount">DISCOUNT </label>
                            <input class= "input-style width-input-price-discount" type="text" name="discount" id="productPromo" value="<%= productToEdit.discount%>"></input>
                            <label for=""> % </label>
                        </div>
                    </div>
                </div>

                <div class="manage-inventory-container">
                    <div class="title-container">
                        <h3>MANAGE INVENTORY</h3>
                    </div>

                    <div class="manage-form-container">
                        
                        <ul class="ul-upload-data">
                            <li>
                                <p>SIZE</p>

                                <select name="size" class="input-style" id="size" >
                                    <option value="" >-</option>
                                    <option value="s">S</option>
                                    <option value="m">M</option>
                                    <option value="l">L</option>
                                </select>
                            </li>
                            <li>
                                <p>PRODUCT TYPE</p>
                                <select name="type" class="input-style" id="type">
                                    <option value="<%= productToEdit.type%>" selected ><%= productToEdit.type%></option>
                                    <option value="top">TOP</option>
                                    <option value="bottom">BOTTOMS</option>
                                    <option value="outerwear">OUTERWEAR</option>
                                </select>
                            </li>
                            <li>
                                <p>COLORS & QTY</p>
                                <ul>
                                    <li>
                                        <input type="radio" name="addColor">
                                        <input type="number" class="input-style" name="">
                                    </li>
                                </ul>
                            </li>
                            <li class="save-cancel">
                                <a href="#" class="save-product">Save</a>
                                <span class="material-icons cancel-product">
                                    clear
                                </span>
                            </li>
                        </ul>
                        <ul class="ul-upload-data">
                            <li>
                                <p>SIZE</p>
                                <select name="size" class="input-style" id="size">
                                    <option value="" disabled selected>-</option>
                                    <option value="s">S</option>
                                    <option value="m">M</option>
                                    <option value="l">L</option>
                                </select>
                            </li>
                            <li>
                                <p>PRODUCT TYPE</p>
                                <select name="type" class="input-style" id="type">
                                    <option value="" disabled selected>-</option>
                                    <option value="top">TOP</option>
                                    <option value="bottom">BOTTOMS</option>
                                    <option value="outerwear">OUTERWEAR</option>
                                </select>
                            </li>
                            <li>
                                <p>COLORS & QTY</p>
                                <ul>
                                    <li>
                                        <input type="radio" name="addColor">
                                        <input type="number" class="input-style" name="">
                                    </li>
                                </ul>
                            </li>
                            <li class="save-cancel">
                                <a href="#" class="save-product">Save</a>
                                <span class="material-icons cancel-product">
                                    clear
                                </span>
                            </li>
                        </ul>
                     
                        <div class="add-more-container">
                            
                            <button type="button">
                                <div>
                                    <span class="material-icons add-more">
                                        add_circle_outline
                                    </span>
                                <p>ADD MORE</p>
                                </div>
                            </button>
                           
                        </div>

                    </div>
                </div>
                
                <div class="submit-button-container">
                    <button type="submit">UPLOAD PRODUCT</button>
                </div>
            </form>
        </section>





    </main>
    
    <%- include('../partials/footer')%>
    
    
</body>
</html>