<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head')%>
<body>
    <!-- HEADER -->
    <%- include('../partials/header')%>

    <main>
        <h1 class="h1-center">WISHLIST</h1>

        <div class="products-container">
            <% for(product of productsWished){%>
                    
                <article class="product-container">
                    <a href="/products/detail/<%= product.id %>">
                    
                        <img src="/imgs/products/<%= product.images[0].filename[0] %>" alt=""> 
                            
                        <div class="product-detail">
                            <div class="name-price-product-container">
                                <h3><%= product.name%></h3> 
                                <p>$<%= product.price %></p>
                            </div>
                        </div>
                    </a>
                </article>
            <%}%>
        </div>
    </main>
    <script src="/scripts/wishlist.js"></script>
    <!-- FOOTER -->
    <%- include('../partials/footer')%>
    
</body>
</html>